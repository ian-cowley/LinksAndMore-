<Page x:Class="LinksAndMore.Views.CategoriesPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="800"
      Title="Categories Management">

    <Grid Margin="20">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left" Width="600">
            <ui:TextBlock
                Text="Categories"
                FontWeight="Bold"
                FontSize="28"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Margin="0,0,0,20" />

            <ui:Card Margin="0,0,0,20">
                <ui:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3E3E3E" Offset="0.0" />
                        <GradientStop Color="#202020" Offset="1.0" />
                    </LinearGradientBrush>
                </ui:Card.Background>
                <StackPanel Margin="10">
                    <Grid Margin="0,0,0,10">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>
                        <ui:TextBox PlaceholderText="New Category Name" 
                                    Text="{Binding NewCategoryName, UpdateSourceTrigger=PropertyChanged}" />
                        <ui:Button Grid.Column="1" 
                                   Content="Add Category" 
                                   Icon="{ui:SymbolIcon Add24}"
                                   Command="{Binding AddCategoryCommand}"
                                   Margin="10,0,0,0" />
                    </Grid>

                    <ui:TextBlock Text="Existing Categories" FontWeight="SemiBold" Margin="0,10,0,5" />
                    <ItemsControl ItemsSource="{Binding Categories}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,5">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <ui:TextBox Text="{Binding Name, UpdateSourceTrigger=PropertyChanged}" 
                                                VerticalAlignment="Center">
                                        <ui:TextBox.InputBindings>
                                            <KeyBinding Key="Enter" Command="{Binding DataContext.SaveDataCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}" />
                                        </ui:TextBox.InputBindings>
                                    </ui:TextBox>
                                    <ui:Button Grid.Column="1" 
                                               Icon="{ui:SymbolIcon Delete24}"
                                               Appearance="Transparent"
                                               Foreground="Red"
                                               Command="{Binding DataContext.DeleteCategoryCommand, RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                               CommandParameter="{Binding}"
                                               Margin="5,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </ui:Card>
        </StackPanel>
    </Grid>
</Page>
