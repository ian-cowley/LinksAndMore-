<Page x:Class="LinksAndMore.Views.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:converters="clr-namespace:LinksAndMore.Converters"
      xmlns:controls="clr-namespace:LinksAndMore.Controls"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Dashboard">

    <Grid Margin="20" Background="Transparent">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <Grid>
                <ui:TextBlock
                    Text="Dashboard"
                    FontWeight="Bold"
                    FontSize="28"
                    Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                <ui:Button
                    Content="Add New"
                    Icon="{ui:SymbolIcon Add24}"
                    HorizontalAlignment="Right"
                    VerticalAlignment="Bottom"
                    Click="OnAddItemClick" />
            </Grid>
            <Grid Margin="0,10,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>
                <ui:TextBox
                    Grid.Column="0"
                    PlaceholderText="Search links, notes, or snippets..."
                    Icon="{ui:SymbolIcon Search24}"
                    Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}" />

                <StackPanel Grid.Column="1" Orientation="Horizontal" Margin="15,0,0,0" VerticalAlignment="Center" Visibility="{Binding IsSemanticSearchEnabled, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <ui:SymbolIcon Symbol="BrainCircuit24" Foreground="#FF3B82F6" Margin="0,0,8,0" />
                    <TextBlock Text="AI Active" VerticalAlignment="Center" Foreground="#FF3B82F6" FontWeight="SemiBold" />
                </StackPanel>
            </Grid>

            <StackPanel Visibility="{Binding IsBusy, Converter={StaticResource BooleanToVisibilityConverter}}" Margin="0,15,0,0">
                <ui:TextBlock Text="{Binding IndexingProgressText}" Margin="0,0,0,5" FontSize="12" Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                <ProgressBar IsIndeterminate="True" Height="2" />
            </StackPanel>
        </StackPanel>

        <ItemsControl Grid.Row="1" ItemsSource="{Binding FilteredCategories}"
                      VirtualizingStackPanel.IsVirtualizing="True"
                      VirtualizingStackPanel.VirtualizationMode="Recycling"
                      ScrollViewer.CanContentScroll="True">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <VirtualizingStackPanel />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
            <ItemsControl.ItemTemplate>
                <DataTemplate>
                    <StackPanel Margin="0,0,0,30">
                        <ui:TextBlock
                            Text="{Binding Name}"
                            FontSize="20"
                            FontWeight="SemiBold"
                            Margin="0,0,0,15"
                            Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
                        
                        <ItemsControl ItemsSource="{Binding FilteredItems}"
                                      ScrollViewer.CanContentScroll="True">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <controls:VirtualizingWrapPanel ItemWidth="260" ItemHeight="220" />
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <ui:Card Margin="5" Width="250" Padding="12">
                                        <ui:Card.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#3E3E3E" Offset="0.0" />
                                                <GradientStop Color="#202020" Offset="1.0" />
                                            </LinearGradientBrush>
                                        </ui:Card.Background>
                                        <Grid>
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="Auto" />
                                                <RowDefinition Height="*" />
                                                <RowDefinition Height="Auto" />
                                            </Grid.RowDefinitions>

                                            <Grid Grid.Row="0">
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="Auto" />
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="Auto" />
                                                </Grid.ColumnDefinitions>
                                                <ui:SymbolIcon 
                                                    Grid.Column="0"
                                                    Symbol="{Binding Type, Converter={StaticResource TypeToIconConverter}}" 
                                                    FontSize="24" HorizontalAlignment="Left" Margin="0,0,8,8" 
                                                    VerticalAlignment="Top" />
                                                <ui:TextBlock
                                                    Grid.Column="1"
                                                    Text="{Binding Title}"
                                                    FontWeight="SemiBold"
                                                    TextWrapping="Wrap"
                                                    TextTrimming="CharacterEllipsis"
                                                    MaxHeight="60"
                                                    VerticalAlignment="Top" />
                                                
                                                <Border Grid.Column="2" 
                                                        Background="#2B8C46" 
                                                        CornerRadius="4" 
                                                        Padding="6,2" 
                                                        Visibility="{Binding RelevanceString, Converter={StaticResource StringToVisibilityConverter}}"
                                                        VerticalAlignment="Top">
                                                    <TextBlock Text="{Binding RelevanceString}" FontSize="10" Foreground="White" FontWeight="Bold" />
                                                </Border>
                                            </Grid>

                                            <ui:TextBlock
                                                Grid.Row="1"
                                                Text="{Binding Content}"
                                                FontSize="12"
                                                Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                                TextWrapping="Wrap"
                                                TextTrimming="CharacterEllipsis"
                                                Margin="0,8,0,0"
                                                Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}}" />

                                            <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,12,0,0">
                                                <ui:Button
                                                    Content="Open"
                                                    Icon="{ui:SymbolIcon Open24}"
                                                    Command="{Binding DataContext.OpenLinkCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Visibility="{Binding Type, Converter={StaticResource TypeToVisibilityConverter}, ConverterParameter=OpenButton}" />
                                                
                                                <ui:Button
                                                    Icon="{ui:SymbolIcon Edit24}"
                                                    CommandParameter="{Binding}"
                                                    Click="OnEditItemClick"
                                                    Margin="5,0,0,0"
                                                    ToolTip="Edit" />

                                                <ui:Button
                                                    Icon="{ui:SymbolIcon Delete24}"
                                                    Command="{Binding DataContext.DeleteItemCommand, RelativeSource={RelativeSource AncestorType=Page}}"
                                                    CommandParameter="{Binding}"
                                                    Appearance="Secondary"
                                                    Margin="5,0,0,0"
                                                    ToolTip="Delete" />
                                            </StackPanel>
                                        </Grid>
                                    </ui:Card>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </StackPanel>
                </DataTemplate>
            </ItemsControl.ItemTemplate>
        </ItemsControl>
    </Grid>
</Page>
