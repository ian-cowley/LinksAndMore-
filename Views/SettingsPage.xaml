<Page x:Class="LinksAndMore.Views.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
      xmlns:local="clr-namespace:LinksAndMore.Views"
      xmlns:converters="clr-namespace:LinksAndMore.Converters"
      xmlns:appearance="clr-namespace:Wpf.Ui.Appearance;assembly=Wpf.Ui"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Settings">

    <Grid Margin="20">
        <StackPanel MaxWidth="600" HorizontalAlignment="Left">
            <ui:TextBlock
                Text="Settings"
                FontWeight="Bold"
                FontSize="28"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}"
                Margin="0,0,0,20" />

            <!-- Appearance -->
            <ui:TextBlock
                Text="Appearance"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0,0,0,10"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />
            
            <ui:Card Margin="0,0,0,20">
                <ui:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3E3E3E" Offset="0.0" />
                        <GradientStop Color="#202020" Offset="1.0" />
                    </LinearGradientBrush>
                </ui:Card.Background>
                <StackPanel Margin="10">
                    <ui:TextBlock Text="App Theme" Margin="0,0,0,10" />
                    <StackPanel Orientation="Horizontal">
                        <RadioButton Content="Light" 
                                     GroupName="Theme" 
                                     Command="{Binding ChangeThemeCommand}" 
                                     CommandParameter="{x:Static appearance:ApplicationTheme.Light}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static appearance:ApplicationTheme.Light}}" />
                        <RadioButton Content="Dark" 
                                     GroupName="Theme" 
                                     Margin="20,0,0,0"
                                     Command="{Binding ChangeThemeCommand}" 
                                     CommandParameter="{x:Static appearance:ApplicationTheme.Dark}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static appearance:ApplicationTheme.Dark}}" />
                        <RadioButton Content="System" 
                                     GroupName="Theme" 
                                     Margin="20,0,0,0"
                                     Command="{Binding ChangeThemeCommand}" 
                                     CommandParameter="{x:Static appearance:ApplicationTheme.Unknown}"
                                     IsChecked="{Binding SelectedTheme, Converter={StaticResource EnumToBooleanConverter}, ConverterParameter={x:Static appearance:ApplicationTheme.Unknown}}" />
                    </StackPanel>
                </StackPanel>
            </ui:Card>

            <!-- Data -->
            <ui:TextBlock
                Text="Data &amp; Storage"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0,0,0,10"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <ui:Card Margin="0,0,0,20">
                <ui:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3E3E3E" Offset="0.0" />
                        <GradientStop Color="#202020" Offset="1.0" />
                    </LinearGradientBrush>
                </ui:Card.Background>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <ui:TextBlock Text="Data File Location" FontWeight="SemiBold" />
                        <ui:TextBlock Text="{Binding DataFilePath}" 
                                    FontSize="12" 
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap" />
                    </StackPanel>
                    <ui:Button Grid.Column="1" 
                               Content="Open Folder" 
                               Icon="{ui:SymbolIcon Folder24}"
                               Command="{Binding OpenDataFolderCommand}"
                               VerticalAlignment="Center" />
                </Grid>
            </ui:Card>

            <!-- Search Features -->
            <ui:TextBlock
                Text="Search Features"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0,0,0,10"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <ui:Card Margin="0,0,0,20">
                <ui:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3E3E3E" Offset="0.0" />
                        <GradientStop Color="#202020" Offset="1.0" />
                    </LinearGradientBrush>
                </ui:Card.Background>
                <Grid Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <StackPanel>
                        <ui:TextBlock Text="AI Semantic Search" FontWeight="SemiBold" />
                        <ui:TextBlock Text="Use local AI to find links based on concept and meaning instead of strict text matches." 
                                    FontSize="12" 
                                    Foreground="{DynamicResource TextFillColorSecondaryBrush}"
                                    TextWrapping="Wrap" />
                    </StackPanel>
                    <ui:ToggleSwitch Grid.Column="1" 
                               IsChecked="{Binding IsSemanticSearchEnabled, Mode=TwoWay}" 
                               VerticalAlignment="Center" />
                </Grid>
            </ui:Card>

            <!-- About -->
            <ui:TextBlock
                Text="About"
                FontSize="18"
                FontWeight="SemiBold"
                Margin="0,0,0,10"
                Foreground="{DynamicResource TextFillColorPrimaryBrush}" />

            <ui:Card>
                <ui:Card.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#3E3E3E" Offset="0.0" />
                        <GradientStop Color="#202020" Offset="1.0" />
                    </LinearGradientBrush>
                </ui:Card.Background>
                <StackPanel Margin="10">
                    <ui:TextBlock Text="Links &amp; More" FontWeight="Bold" />
                    <ui:TextBlock Text="{Binding AppVersion, StringFormat='Version: {0}'}" 
                                Foreground="{DynamicResource TextFillColorSecondaryBrush}" />
                    <ui:TextBlock Text="Â© 2026 Antigravity - Powered by Wpf.Ui" 
                                Margin="0,10,0,0"
                                FontSize="12"
                                Foreground="{DynamicResource TextFillColorTertiaryBrush}" />
                </StackPanel>
            </ui:Card>

        </StackPanel>
    </Grid>
</Page>
