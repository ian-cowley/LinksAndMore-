<ui:FluentWindow x:Class="LinksAndMore.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        xmlns:local="clr-namespace:LinksAndMore"
        xmlns:views="clr-namespace:LinksAndMore.Views"
        xmlns:converters="clr-namespace:LinksAndMore.Converters"
        mc:Ignorable="d"
        Title="Links &amp; More" Height="700" Width="1100"
        WindowStartupLocation="CenterScreen"
        ExtendsContentIntoTitleBar="True"
        WindowBackdropType="Mica">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <ui:TitleBar
            Title="Links &amp; More"
            Grid.Row="0">
        </ui:TitleBar>

        <ui:NavigationView
            Grid.Row="1"
            Name="RootNavigation"
            PaneDisplayMode="Left"
            IsBackButtonVisible="Collapsed"
            OpenPaneLength="220"
            ScrollViewer.VerticalScrollBarVisibility="Visible">
            <ui:NavigationView.MenuItems>
                <ui:NavigationViewItem
                    Content="Dashboard"
                    Icon="{ui:SymbolIcon Board24}"
                    TargetPageType="{x:Type views:DashboardPage}" />
            </ui:NavigationView.MenuItems>
            
            <ui:NavigationView.FooterMenuItems>
                <ui:NavigationViewItem
                    Content="Settings"
                    Icon="{ui:SymbolIcon Settings24}"
                    TargetPageType="{x:Type views:SettingsPage}" />
            </ui:NavigationView.FooterMenuItems>
        </ui:NavigationView>

        <!-- Dialog Host -->
        <ui:ContentDialogHost x:Name="RootContentDialogPresenter" Grid.Row="0" Grid.RowSpan="2" />
    </Grid>
</ui:FluentWindow>
